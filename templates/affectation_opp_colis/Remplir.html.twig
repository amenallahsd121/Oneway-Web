						<td>
							{{ form_errors(form.joinColis) }}
						</td>

					</tr>
	


				<tr>
					<td colspan="2">{{ form_widget(form.Ajouter, {'attr': {'style': 'font-size: 18px; padding: 15px 20px; margin-left: 130px; margin-top: 10px;'}}
						) }}</td>
				</tr>
			</table>


			{{form_end(form)}}
