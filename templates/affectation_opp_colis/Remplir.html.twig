		}


		.form-table {
			width: 100%;
			max-width: 600px;
			margin: -80px auto 0 -145px;
			border-collapse: collapse;
		}

		.form-table td {
			padding: 10px;

		}

		.form-table td:first-child {
			width: 150px;
			font-weight: bold;
		}
	</style>

	<div class="form-container">


		{% block form %}
			{{form_start(form,{'attr': {'novalidate': 'novalidate'}}
			)}}
