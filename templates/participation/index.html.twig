	</style>

	<div class="categories-area section-padding30">
		<div class="container">

			<div class="row">
				<div
					class="col-lg-12">
					<!-- Section Title -->
					<div class="section-title text-center mb-80">
						<h2 style="font-size: 32px; color: white; margin-top: -70px; margin-right: 1050px;">Mes Evenements</h>


					</div>
				</div>
			</div>

			<div class="row">

				{% for data in list %}

					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="single-cat text-center mb-50">
							<div class="cat-icon">
								<span class="fas fa-calendar-alt"></span>
							</div>
							<div class="cat-cap">
