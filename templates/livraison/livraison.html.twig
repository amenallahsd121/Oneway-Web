{% extends 'backbase.html.twig' %}


{% block title %}
	Liste des Livreurs
{% endblock %}


{% block body %}


	<div class="row ">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">

					<h4 class="card-title">Liste des Colis Non Affectés</h4>


					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>
										Poids
									</th>
									<th>
										Type
									</th>
									<th>
										Prix
									</th>
									<th>
										Lieu Départ
									</th>
									<th>
										Lieu Arrivé
									</th>
									<th>
										Prénom Livreur
									</th>
                                    <th>
										Nom Livreur
									</th>
									<th>
										Etat
									</th>
									<th>
										Suppression
									</th>
									<th>
										Modification
									</th>

								</tr>
							</thead>

							{% for data in list %}
								<tr>

									<td>
										{{ data.colis.poids }}
									</td>
									<td>
										{{ data.colis.typeColis }}
									</td>
									<td>
										{{ data.colis.prix }}
                                        </td>
									<td>
											{{ data.colis.lieuDepart }}
									</td>

									<td>
											{{ data.colis.lieuArrive }}
									</td>

									<td>
										{{ data.livreur.prenom }}
									</td>
                                    <td>
										{{ data.livreur.nom }}
									</td>
									<td>
											{{ data.etat }}
									</td>
									<td>
										<a href="{{ path('delete_livraison', {'id': data.idLivraison}) }}" class="btn btn-outline-danger btn-fw;">Supprimer</a>
									</td>


									<td>
										<a href="{{ path('update_livraison', {'id': data.idLivraison}) }}" class="btn btn-outline-warning btn-fw;">
											Modifier</a>
									</td>
								</tr>

							{% endfor %}


						{% endblock %}
