{% extends 'backbase.html.twig' %}


{% block title %}
	Ajouter Vehicule
{% endblock %}


{% block body %}


{{ form_start(form) }}

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Ajouter Vehicule</h4>
      <p class="card-description">Veuillez saisir les details de Vehicule :</p>

      <form class="forms-sample">


        {{ form_row(form._token) }}
        <div class="form-group mt-3">
          {{ form_label(form.matricule, "matricule") }}
          {{ form_widget(form.matricule, {'attr': {'class': 'form-control', 'placeholder': 'Exemple 165TUN6845'}}) }}
          {{ form_errors(form.matricule) }}
        </div>

         <div class="form-group mt-3">
          {{ form_label(form.marque, "marque") }}
          {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'placeholder': 'Exemple MG '}}) }}
          {{ form_errors(form.marque) }}
        </div> 

            <div class="form-group mt-3">
          {{ form_label(form.idCategorie, "type") }}
          {{ form_widget(form.idCategorie, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.idCategorie) }}
        </div> 

       

          
        <div class="form-group mt-3">
          {{ form_widget(form.Ajouter) }}
           



        <a href="{{ path ('app_vehicule') }}" class="btn btn-dark">Annuler</a>

        </div>
      </form>
    </div>
  </div>
</div>

{{ form_end(form) }}

{% endblock %}
