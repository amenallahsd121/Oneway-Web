{% extends 'base.html.twig' %}


{% block title %}
	Ajouter Colis
{% endblock %}


{% block body %}

	<style>
		body {
			background-color: #000c20;
		}
		.form-container {
			margin-top: -120px;

		}
		form {

			padding: 200px;
			background-color: #000c20;
			margin-left: 400px; /* add margin to move form to the right */


		}
		input[type="text"],
		select {
			width: 500px; /* set width of text inputs and select */
			font-size: 19px; /* set font size for text inputs and select */
			padding: 18px; /* set padding for text inputs and select */
			border: none; /* remove border */
			background-color: white; /* set background color for text inputs and select */
			border-radius: 5px; /* round the corners of text inputs and select */
			margin-bottom: 10px; /* add some space between form fields */
		}
		label {
			display: inline-block;
			width: 100px; /* adjust as needed */
			margin-right: 7px; /* adjust as needed */
			font-size: 16px; /* set font size for labels */
			font-weight: bold; /* make labels bold */
			color: white;
		}


		.form-table {
			width: 100%;
			max-width: 600px;
			margin: -80px auto 0 -145px;
			border-collapse: collapse;
		}

		.form-table td {
			padding: 10px;

		}

		.form-table td:first-child {
			width: 150px;
			font-weight: bold;
		}
	</style>

	<div class="form-container">


		{% block form %}
			{{form_start(form,{'attr': {'novalidate': 'novalidate'}}
			)}}
			<table class="form-table">
				<h1 style="color: white; font-size: 26px;">
					Veuillez saisir les details de votre colis</h1>
				<tr>

					<td>
						{{ form_label(form.poids,"Poids")  }}
					</td>
					<td>
						{{ form_widget(form.poids) }}
					</td>

					<span style="font-size: 22px; ">
						{{ form_errors(form.poids) }}
					</span>

				</tr>
				<br>
					<tr></tr>
					<tr>
						<td>
							{{ form_label(form.typeColis,"Type") }}
						</td>
						<td>
							{{ form_widget(form.typeColis)}}
						</td>
						<td>
							{{ form_errors(form.typeColis) }}
						</td>
					</tr>
					<br>


					<tr>
						<td>
							{{ form_label(form.lieuDepart,"Lieu Départ") }}
						</td>
						<td>
							{{ form_widget(form.lieuDepart)}}
						</td>
						<td>
							{{ form_errors(form.lieuDepart) }}
						</td>
					</tr>
					<br>


					<tr>
						<td>
							{{ form_label(form.lieuArrive,"Lieu Arrivé") }}
						</td>
						<td>
							{{ form_widget(form.lieuArrive)}}
						</td>
						<td>
							{{ form_errors(form.lieuArrive) }}
						</td>
					</tr>
					<br>

					<tr>
						<td>
							{{ form_label(form.prix,"Prix") }}
						</td>
						<td>
							{{ form_widget(form.prix, {'attr': {'readonly': true}}) }}
						</td>

					</tr>
					<br>

				</tr>
				<br>


				<tr>
					<td colspan="2">{{ form_widget(form.Payer, {'label': 'Mettre à jours','attr': {'style': 'font-size: 18px; padding: 15px 20px; margin-left: 130px; margin-top: 10px;'}}
						) }}</td>
				</tr>
			</table>


			{{form_end(form)}}
		{% endblock %}

		<script>
			var poidsField = document.getElementById('{{ form.poids.vars.id }}');
var prixField = document.getElementById('{{ form.prix.vars.id }}');

poidsField.addEventListener('input', function () {
var poidsValue = parseFloat(poidsField.value) || 0;
var prixValue = 0;
if (poidsValue === 0) {
prixField.value = '0.00 DT';
} else if (poidsValue > 0 && poidsValue <= 1) {
prixValue = 7;
prixField.value = prixValue.toFixed(2);
} else {
prixValue = poidsValue * 7;
prixField.value = prixValue.toFixed(2);
}
});
		</script>

	{% endblock %}
