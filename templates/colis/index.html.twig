{% block body %}


	<style>

		body {
			background-color: #000c20;
		}

		
	</style>

	<div class="categories-area section-padding30">
		<div class="container">

			<div class="row">
				<div
					class="col-lg-12">
					<!-- Section Title -->
					<div class="section-title text-center mb-80">
						<h2 style="font-size: 32px; color: white; margin-top: -70px; margin-right: 1050px;">Mes Colis</h>


					</div>
				</div>
			</div>

			<div class="row">

				{% for data in list %}

					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="single-cat text-center mb-50">
							<div class="cat-icon">
								<span class="flaticon-shipped"></span>
							</div>
							<div class="cat-cap">
								<h5>
									<a style="font-size: 32px; color: white;">Détails de colis :
									</a>
								</h5>
								<p style="font-size: 22px; color: white;">
									Poids :
									{{ data.poids }}
									Kg</p>
								<p style="font-size: 22px; color: white;">
									Type :
									{{ data.typeColis }}</p>
								<p style="font-size: 22px; color: white;">
									Prix :
									{{ data.prix }}
									DT</p>
								<p style="font-size: 22px; color: white;">
									Lieu Départ :
									{{ data.lieuDepart }}</p>
								<p style="font-size: 22px; color: white;">
									Lieu Arrivé :
									{{ data.lieuArrive }}</p>

								<a href="{{ path('delete_colis', {'id': data.idColis}) }}" class="btn btn-light" style="padding: 0.75rem 1rem;">
									<i class="bi bi-trash"></i>
								</a>
								<a href="{{ path('update_colis', {'id': data.idColis}) }}" class="btn btn-light" style="padding: 0.75rem 1rem; margin-left: 10px;">
									<i class="bi bi-arrow-clockwise"></i>
								</a>


							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>

