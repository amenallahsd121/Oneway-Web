{% extends 'backbase.html.twig' %}


{% block title %}
	Liste des Livreurs
{% endblock %}


{% block body %}
	<style>
		.my-class {
			color: red;
			font-size: 18px;
			text-align: center;
		}
	</style>

	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Liste des Livreurs<a href="{{ path ('add_livreur') }}" class="btn btn-success btn-fw float-right">Ajouter Livreur</a>
					</h4>
					<form action="{{ path('search_livreur') }}" method="post" style="margin-top: 35px;">
						<div class="form-group">
							<div class="input-group">
								<input type="text" name="CIN" class="form-control" id="searchField" placeholder="Entrez N° CIN du livreur" style="outline: none;color: #fff; ">
								<div class="input-group-append">
									<button class="btn btn-primary" type="submit" id="searchButton">Rechercher</button>
								</div>
							</div>
						</div>
					</form>


					{% if list is not empty %}


						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>
											CIN
										</th>
										<th>
											Prénom
										</th>
										<th>
											Nom
										</th>
										<th>
											Véhicule
										</th>
										<th>
											Suppression
										</th>
										<th>
											Modification
										</th>
									</tr>
								</thead>


								{% for data in list %}

									<tr>

										<td>
											{{ data.cinLivreur }}
										</td>
										<td>
											{{ data.prenom }}
										</td>
										<td>
											{{ data.nom }}
										</td>
										<td>
											{{ data.vehicule }}
										</td>


										<td>
											<a href="{{ path('delete_livreur', {'id': data.idLivreur}) }}" class="btn btn-outline-danger btn-fw;">Supprimer</a>
										</td>


										<td>
											<a href="{{ path('update_livreur', {'id': data.idLivreur}) }}" class="btn btn-outline-warning btn-fw;">
												Modifier</a>
										</td>
									</tr>


								{% endfor %}
							{% else %}
								<p class="my-class">Aucun livreur ne correspond à votre recherche</p>


							{% endif %}
						{% endblock %}
