{% extends 'backbase.html.twig' %}


{% block title %}
	Liste des Opportunite
{% endblock %}


{% block body %}



	 <div class="row ">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">

               <h4 class="card-title">Liste des Opportunite<a href=" {{ path ('add_opportinute') }} " class="btn btn-success btn-fw float-right">Ajouter Opportunite</a></h4>


                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th> Date </th>
                          <th> Départ </th>
                          <th> Heur Depart </th>
                          <th> Arriveé </th>
                          <th> Heur Arriveé </th>
                          <th> description </th>
                         
                        </tr>
                      </thead>

                      {% for data in list %}
                        <tr>
                         
                          <td> {{ data.date|date("m/d/Y") }} </td>
                         
                          <td> {{ data.depart }} </td>
                          <td>{{ data.heurDepart|number_format(2, '.', '') }}</td>
                          <td> {{ data.arrivee }} </td>
                         
                           <td>{{ data.heurArrivee|number_format(2, '.', '') }}</td>
                          <td> {{ data.description }} </td>
                       


                      
                          <td>
  <a href="{{ path('delete_opportinute', {'id': data.id_opp}) }}" class="btn btn-outline-danger btn-fw;">Supprimer</a>
  {# {{ path('delete_opportunite', {'id': data.idOpp}) }} #}
</td>


                          <td>
                             <a href="{{ path('update_opportinute', {'id': data.id_opp}) }}"   class="btn btn-outline-warning btn-fw;"> Modifier</a>
                          </td>
                        </tr> 
                          
                         {% endfor %}
                       
                         
                

{% endblock %}


