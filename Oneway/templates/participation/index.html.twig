{% extends 'base.html.twig' %}


{% block title %}
	 Evenements
{% endblock %}


{% block body %}


	<style>

		body {
			background-color: #000c20;
		}
		.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  background: rgb(0, 12, 32);
  width: 100%;
}

        .pagination a {
  display: block;
  margin: 0 5px;
  padding: 10px;
  background-color: black; /* change background color to black */
  border: 1px solid #ddd;
  border-radius: 4px;
  color: #fff; /* change text color to white */
  text-decoration: none;
  font-family: Arial;
  transition: background-color 0.3s ease;
}

.pagination a:hover {
  background-color: #ddd;
  color: #000;
}

.pagination .active {
  background-color: #007bff;
  color: #fff;
  border-color: #007bff;
}

.pagination .disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.pagination li:hover {
  background-color: #007bff;
  color: #fff;
  border-color: #007bff;
}

.pagination li:hover a {
  color: #fff;
}

	</style>

	<div class="categories-area section-padding30">
		<div class="container">

			<div class="row">
				<div
					class="col-lg-12">
					<!-- Section Title -->
					<div class="section-title text-center mb-80">
						<h2 style="font-size: 32px; color: white; margin-top: -70px; margin-right: 1050px;"> Evenements</h>


					</div>
				</div>
			</div>

			<div class="row">

				{% for data in list %}
         
					<div class="col-lg-4 col-md-6 col-sm-6">
					
						<div class="single-cat text-center mb-50">
						
							<div class="cat-icon">
								<span class="fas fa-calendar-alt"></span>
							</div>
							<div class="cat-cap">
								<h5>
									<a style="font-size: 32px; color: white;">Détails d'evenement :
									</a>
								</h5>
								<p style="font-size: 22px; color: white;">
									nom :
									{{ data.nom }}
								</p>
								<p style="font-size: 22px; color: white;">
									description :
									{{ data.description }}</p>
								<p style="font-size: 22px; color: white;">
									date Debut :
									 {{ data.dateDebutEvent|date("m/d/Y") }}




                 

								</p>
								<p style="font-size: 22px; color: white;">
									Date Fin :
									 {{ data.dateFinEvent|date("m/d/Y") }}</p>
								<p style="font-size: 22px; color: white;">
									awards :
									{{ data.awards }}</p>


									

								{% if data.Participation is null %}
                                <p style="font-size: 22px; color: white;">
											Participer Maintenant :
										</p>
									<a href="{{ path('add_participation', {'ide': data.id_event}) }}" class="btn btn-light" style="padding: 0.75rem 1rem; margin-right: 5px;">
										<i class="fas fa-user-plus"></i>
										

									</a>

								{% else %}
<p style="font-size: 22px; color: white;">
											Déja Participer :
										</p>
									<a href="{{ path('delete_participation', {'ide': data.Participation.idParticipation}) }}" class="btn btn-light" style="padding: 0.75rem 1rem; margin-left: 5px;">
										<i class="bi bi-trash"></i>
									</a>
									<a href="" class="btn bleu"> Exporter PDF </a> <br>
								{% endif %}


							</div>
						</div>
					</div>
				{% endfor %}
				<div class="pagination">
             {{ knp_pagination_render(list) }}
      </div>
				

			</div>
		</div>
	</div>
      
{% endblock %}



